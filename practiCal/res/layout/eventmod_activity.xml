<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/eventmod_main_sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/eventmod_set_range_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/eventmod_set_start_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_eventmod_start_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="start_day" />

                <Button
                    android:id="@+id/btn_eventmod_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="start_time" />
            </LinearLayout>

            <Button
                android:id="@+id/eventmod_repeated_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="r_setting" />

            <LinearLayout
                android:id="@+id/eventmod_set_end_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_eventmod_end_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="end_day" />

                <Button
                    android:id="@+id/btn_eventmod_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="end_time" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventmod_name_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/eventmod_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#dddddd"
                android:ems="10"
                android:hint="type event name"
                android:textSize="24dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventmod_description_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Description" />

            <EditText
                android:id="@+id/eventmod_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#dddddd"
                android:ems="10"
                android:hint="type description"
                android:lines="8" >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventmod_additional_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Location" />

            <EditText
                android:id="@+id/eventmod_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#dddddd"
                android:ems="10"
                android:hint="type location" >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Important Event Check" />

            <EditText
                android:id="@+id/eventmod_isIPT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:ems="10"
                android:hint="is it important?" >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Event Group" />

            <EditText
                android:id="@+id/eventmod_eGnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#dddddd"
                android:ems="10"
                android:hint="select event group" >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Event Color" />

            <EditText
                android:id="@+id/eventmod_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#dddddd"
                android:ems="10"
                android:hint="color~" >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventmod_confirm_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_eventmod_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="OK" />

            <Button
                android:id="@+id/btn_eventmod_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="DELETE" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>